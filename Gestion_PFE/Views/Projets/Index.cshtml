@model IEnumerable<Gestion_PFE.Models.Projet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Titre de projet
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                Etudiant
            </th>
            <th>
                Encadré par
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameProjet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etudiant.FullName)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encadrant.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
